<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
     <%= link_to "sample app", "#", id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("home"), root_path %></li>
        <li><%= link_to t("help"), "#" %></li>
        <% if logged_in? %>
          <li><%= link_to t("users"), current_user %></li>
          <li class="dropdown">
            <%= link_to "#", class: "dropdown-toggle","data-toggle": "dropdown" do %>
              <%= t("account")%><b class= "caret"></b>
            <% end %>
            <ul class= "dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", "#" %></li>
              <li class= "divider"></li>
              <li><%= link_to "Log out",logout_path, data: { "turbo-method": :delete } %></li>
            </ul>
          </li>
        <% else %>
            <li><%= link_to t("log_in"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
  <div class = "style_link_locale">
    <%= link_to t("English"), locale: :en %>
    <%= link_to t("Vietnamese"), locale: :vi %>
  </div>
</header>
